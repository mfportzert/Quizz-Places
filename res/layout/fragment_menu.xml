<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <!-- Marche pas pour l instant 
    <com.quizz.places.widgets.MenuBackground
        android:id="@+id/haloBackground"
        android:layout_width="match_parent"
     	android:layout_height="match_parent" />
     -->
    <ImageView 
        android:id="@+id/titleSign"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="-70dp"
    	android:layout_marginLeft="-10dp"
    	android:src="@drawable/title"
    	android:visibility="gone" />
    
    <ImageView 
        android:id="@+id/homeExit"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/home_exit"
    	android:layout_alignParentRight="true"
    	android:layout_marginRight="10dp"
    	android:layout_marginTop="10dp"
    	android:visibility="gone" />
    
    <ImageView 
        android:id="@+id/footer"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:src="@drawable/quizz_footer"
    	android:layout_alignParentBottom="true"
    	android:scaleType="fitEnd"
    	android:visibility="invisible" />
    
    <LinearLayout
        android:id="@+id/menuButtonsContainer"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/titleSign"
    	android:orientation="vertical"
    	android:gravity="center_horizontal"
    	android:visibility="gone" >
    	
        <Button 
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_button_play"
            android:textColor="#FFF"
            android:shadowColor="#000"
            android:shadowRadius="2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/but_blue" />
        
        <Button 
            android:id="@+id/buttonFreeHints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_button_free_hints"
            android:textColor="#FFF"
            android:shadowColor="#000"
            android:shadowRadius="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/but_magenta" />

        <Button 
            android:id="@+id/buttonStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_button_stats"
            android:textColor="#FFF"
            android:shadowColor="#000"
            android:shadowRadius="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/but_orange" />
        
        <Button 
            android:id="@+id/buttonSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_button_settings"
            android:textColor="#FFF"
            android:shadowColor="#000"
            android:shadowRadius="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/but_green" />
        
    </LinearLayout>

</RelativeLayout>