<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <!-- Marche pas pour l instant 
    <com.quizz.places.widgets.MenuBackground
        android:id="@+id/haloBackground"
        android:layout_width="match_parent"
     	android:layout_height="match_parent" />
     -->
    <ImageView 
        android:id="@+id/titleSign"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="-70dp"
    	android:layout_marginLeft="-10dp"
    	android:src="@drawable/title"
    	android:visibility="gone" />
    
    <ImageView 
        android:id="@+id/footer"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:src="@drawable/quizz_footer"
    	android:layout_alignParentBottom="true"
    	android:scaleType="fitEnd"
    	android:visibility="invisible" />
    
    <LinearLayout
        android:id="@+id/menuButtonsContainer"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="50dp"
    	android:layout_marginRight="50dp"
    	android:orientation="vertical"
    	android:visibility="gone" >
    	
        <Button 
            android:id="@+id/buttonPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_button_play" />
        
        <Button 
            android:id="@+id/buttonFreeHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_button_free_hints" />

        <Button 
            android:id="@+id/buttonStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_button_stats" />
        
        <Button 
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_button_settings" />
        
        <Button 
            android:id="@+id/buttonQuit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_button_quit" />
        
    </LinearLayout>

</RelativeLayout>