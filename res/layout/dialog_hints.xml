<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_border_black" >

    <LinearLayout
        android:id="@+id/hints_tabs"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/tab_idea"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@drawable/dialog_tab_selector"
            android:padding="8dp"
            android:src="@drawable/ic_hint_idea" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/black_white_gradient_vertical" />

        <ImageButton
            android:id="@+id/tab_letters"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@drawable/dialog_tab_selector"
            android:padding="8dp"
            android:src="@drawable/ic_hint_letters" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/black_white_gradient_vertical" />

        <ImageButton
            android:id="@+id/tab_hat"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@drawable/dialog_tab_selector"
            android:padding="8dp"
            android:src="@drawable/ic_hint_hat" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/black_white_gradient_vertical" />

        <ImageButton
            android:id="@+id/tab_map"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@drawable/dialog_tab_selector"
            android:padding="8dp"
            android:src="@drawable/ic_hint_map" />
    </LinearLayout>

    <View
        android:id="@+id/hints_tabs_divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="#88ffffff"
        android:layout_below="@+id/hints_tabs"
        android:layout_alignLeft="@+id/hints_tabs"
        android:layout_alignRight="@+id/hints_tabs" />

    <LinearLayout
        android:id="@+id/hints_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/hints_tabs_divider"
        android:layout_alignLeft="@+id/hints_tabs"
        android:layout_alignRight="@+id/hints_tabs" />
        
</RelativeLayout>