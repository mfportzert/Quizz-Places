<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/IsAchievement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

	<RelativeLayout
	    android:id="@+id/AchievementItemDataContainer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp">
	      
	    <ImageView
	        android:id="@+id/StatIcon"
	        android:layout_width="42px"
	        android:layout_height="58px"
	        android:layout_marginRight="10dp"
	        android:gravity="center"
	      	android:src="@drawable/ic_star" />
	    <RelativeLayout
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/StatIcon" >
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_centerInParent="true"
	            android:layout_toLeftOf="@+id/StatScores">
	            <TextView
		            android:id="@+id/StatLabel"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Niveaux débloqués"
			        android:gravity="center_horizontal"
			        android:textStyle="bold"
			        android:textSize="14sp"
			        android:layout_marginLeft="10dp" />
	            <com.quizz.core.widgets.SectionProgressView
		        	android:id="@+id/StatProgress"
		   	        android:layout_width="match_parent"
		  	        android:layout_height="10dp"
		   	        android:src="@drawable/bg_section_progress"
		   	        android:scaleType="fitXY"
		   	        android:adjustViewBounds="true" />
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/StatScores"
	            android:layout_width="45dp"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="10dp">
	            <ImageView
			        android:id="@+id/StatCupIcon"
			        android:layout_width="29px"
			        android:layout_height="36px"
			        android:layout_gravity="center"
			        android:src="@drawable/gray_cup" />
	            <TextView 
	                android:id="@+id/StatDoneOnTotal"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="67/130"
	                android:textSize="11dp"
	                android:gravity="bottom|center_horizontal"
	                android:textStyle="bold"/>
	          </LinearLayout>
		</RelativeLayout>		
	</RelativeLayout>
	
    <View 
        android:id="@+id/AchievementItemSeparator"
        android:layout_below="@+id/AchievementItemDataContainer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#88888888"/>
	
</RelativeLayout>