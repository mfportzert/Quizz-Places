<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/bg_section_rounded">
    
	    <ImageView
	        android:id="@+id/StatIcon"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_marginRight="10dp"
	        android:gravity="center"
	      	android:src="@drawable/ic_star" />
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_toLeftOf="@+id/StatScores">
	            
	            <TextView
		            android:id="@+id/StatLabel"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Niveaux débloqués"
			        android:gravity="bottom|center_horizontal"
			        android:textStyle="bold"
			        android:textSize="14dp"
			        android:layout_marginLeft="10dp" />
	            
	            <com.quizz.core.widgets.SectionProgressView
		        	android:id="@+id/StatProgress"
		   	        android:layout_width="match_parent"
		  	        android:layout_height="19dp"
		   	        android:src="@drawable/bg_section_progress"
		   	        android:scaleType="fitXY"
		   	        android:adjustViewBounds="true" />
	            
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/StatScores"
	            android:layout_width="40dp"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="10dp">
	            <TextView 
	                android:id="@+id/StatDoneOnTotal"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="67/130"
	                android:gravity="bottom"
	                android:textStyle="bold"/>
	            <TextView
	                android:id="@+id/StatPercentScore"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="51%"
	                android:gravity="bottom"
	                android:textStyle="bold"/>
	           </LinearLayout>
	        
	
		</RelativeLayout>
	
	</LinearLayout>
	
</RelativeLayout>