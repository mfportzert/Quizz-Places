<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_border_bright" >

    <com.quizz.places.widgets.RotatingSunEffect
        android:id="@+id/level_success_background_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_success_content"
        android:layout_alignLeft="@+id/level_success_content"
        android:layout_alignRight="@+id/level_success_content"
        android:layout_alignTop="@+id/level_success_content" />

    <RelativeLayout
        android:id="@+id/level_success_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/level_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:shadowColor="#888"
            android:shadowDx="-1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/level_success_title"
            android:textColor="#00B219"
            android:textSize="30sp"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/level_success_title_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/level_success_title"
            android:layout_alignRight="@+id/level_success_title"
            android:layout_below="@+id/level_success_title"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/level_success_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_success_title_divider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#888"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level_success_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_success_response"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/level_success_gain_hint"
            android:textColor="#aaa"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/level_success_buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_success_message"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/level_success_back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/button_level_success_dialog_selector"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_section_back"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Back"
                android:textColor="#888"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/level_success_close_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/button_level_success_dialog_selector"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="Close"
                android:textColor="#888"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/level_success_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_level_success_dialog_selector"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_next"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Next"
                android:textColor="#888"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>