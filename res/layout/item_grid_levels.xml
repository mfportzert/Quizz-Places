<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/levelLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/levelPictureLayout"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/levelAdjustedLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/levelPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/photo_border_white"
                android:paddingBottom="11dp"
                android:paddingLeft="9dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <ImageView
            android:id="@+id/levelStatusIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/levelAdjustedLayout"
            android:layout_alignTop="@+id/levelAdjustedLayout"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_check" />
    </RelativeLayout>

    <include layout="@layout/include_difficulty" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/levelDifficulty" />

</RelativeLayout>