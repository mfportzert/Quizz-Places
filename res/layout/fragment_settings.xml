<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_section_rounded"
        android:orientation="vertical">
	    
        <RelativeLayout
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_margin="5dp" >

            <TextView 
                android:id="@+id/AudioLabel"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/audio_off"
		        android:layout_marginLeft="10dp"
		        android:textSize="20sp"
		        android:textStyle="bold" />
            
	        <CheckBox
		        android:id="@+id/AudioCheckbox"
		        android:layout_alignParentRight="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />

        </RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#88888888"/>
        
        <RelativeLayout
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_margin="5dp" >
        
            <TextView 
                android:id="@+id/VibrationLabel"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/vibration_off"
		        android:layout_marginLeft="10dp"
		        android:textSize="20sp"
		        android:textStyle="bold" />
        
	        <CheckBox
		        android:id="@+id/VibrationCheckbox"
		        android:layout_alignParentRight="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
	        
	    </RelativeLayout>
	    
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#88888888"/>
        
        <RelativeLayout
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_margin="5dp" >
        
            <Button 
                android:id="@+id/ResetButton"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/reset_game"
	            android:textColor="#333"
	            android:shadowColor="#FFF"
	            android:shadowRadius="2"
	            android:textStyle="bold"
	            android:textSize="18sp"
	            android:background="@drawable/grey_button_selector" />
        	        
	    </RelativeLayout>
	    
	</LinearLayout>
</FrameLayout>